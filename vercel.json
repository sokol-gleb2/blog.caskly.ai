{
  "version": 2,
  "builds": [
    { "src": "public/package.json", "use": "@vercel/static-build", "config": { "distDir": "public/dist" } },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "public/dist/$1" }
  ]
}